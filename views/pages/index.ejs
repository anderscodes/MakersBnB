<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <main>
      <div class="container-fluid">
        <form action="index.html" method="post">
          <label for="user_form">User Details</label>
          <div class="form-group" name='user_form'>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" placeholder="e.g. John Smith">
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" name="email" placeholder="e.g. john.smith@example.com">
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="text" class="input-medium bfh-phone" data-format="+44 ddd-dddd-ddd">
            </div>
          </div>
          <label for="listing_form">Listing Information</label>
          <div class="form-group" name='listing_form'>
            <div class="hide-inputbtns">
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" placeholder="e.g. Playboy Mansion">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" rows="5"></textarea>
              </div>
              <div class="form-group">
                <label for="price">Price per night</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Â£</span>
                  </div>
                  <input type="number" value="50" min="0" step="0.01" data-number-to-fixed="2"
                   data-number-step-factor="100" class="form-control currency" id="price">
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" id="submit_listing">Submit</button>
        </form>
      </div>
    </main>
    <footer><% include ../partials/footer %></footer>
  </body>
</html>
